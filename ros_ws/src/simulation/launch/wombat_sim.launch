<?xml version="1.0"?>

<launch>

    <!-- Setting up gazebo arguments -->
    <arg name="debug" default="false"/>
    <arg name="gui" default="true"/>
    <arg name="pause" default="false"/>
    <arg name="world" default="$(find simulation)/worlds/base_world.world"/>

	<!-- Include gazebo_ros launcher -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(arg world)"/>
		<arg name="debug" value="$(arg debug)"/>
		<arg name="gui" value="$(arg gui)"/>
		<arg name="paused" value="$(arg pause)"/>
		<arg name="use_sim_time" value="true"/>
	</include>
	
	<!-- Spawn WOMBAT -->
	<param name="robot_description" command="$(find xacro)/xacro --inorder $(find simulation)/urdf/wombat.xacro"/>

	<arg name="x" default="0.0"/>
	<arg name="y" default="0.0"/>
	<arg name="z" default="0.1"/>

	<node name="wombat_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
		args="-urdf -param robot_description -model wombat -x $(arg x) -y $(arg y) -z $(arg z)"/>

</launch>

